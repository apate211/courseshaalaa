<div class="container-fluid p-5">
    <div class="row border-bottom border-secondary border-1">
      <h1> All Courses </h1>
    </div>
    <div class="row">
      {{#each courses}}
      <div class="card m-3" style="width: 18rem;">
        <img class="card-img-top" src="/public/images/course.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{this.coursename}}</h5>
          <p class="card-text">{{this.description}}</p>
          <div class="row">
            <div class="col-5">
              <a href="/student/not_enrolled/{{this._id}}" class="btn btn-dark">Details</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>




